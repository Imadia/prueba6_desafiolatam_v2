<h1>My Songs</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @user_songs.each do |usersong| %>
      <tr>
        <td><%= Song.find(usersong.song_id).name %></td>
        <td><%= Song.find(usersong.song_id).duration %></td>
        <td><%= link_to 'Destroy', user_user_song_path(current_user, usersong.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
